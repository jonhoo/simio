#
# Bellman Ford IO Automata
#

Name:
	BellmanFord

Signature-Input:
	receive(m)

Signature-Output:
	send(m) connect receive

State:
	self.parent = None
	self.updated = []
	self.dist = None
	if self.i == 0:
		mark("red")
		self.dist = 0
	else:
		label("xx")

Transition-Name:
	send(m)
Transition-Precondition:
	return self.dist is not None and to not in self.updated
Transition-Output:
	return (self.i, self.dist)
Transition-Effect:
	self.updated.append(to)

Transition-Name:
	receive(m)
Transition-Effect:
	act = m[1] + self.weights[m[0]]
	if self.dist is None or act < self.dist:
		if self.parent is not None:
			emark(self.parent, "", "")

		self.dist = act
		self.parent = m[0]
		self.updated = []

		label('%02d' % (self.dist))
		emark(self.parent, "red", self.weights[m[0]])

Tasks:
	send(m)
